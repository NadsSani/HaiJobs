                                android:layout_height="1dp"
                                android:layout_marginTop="2dp"
                                android:background="@color/logocolortwo"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtpin"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                android:padding="2dp"
                                android:gravity="right"
                                />


                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_below="@+id/locationinfo"
                        android:id="@+id/educationinfo"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="20dp"
                        android:elevation="3dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:background="@color/colorPrimary"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:textColor="@color/white"
                                    android:text="EDUCATIONAL INFORMATION"
                                    android:gravity="left"
                                    android:padding="10dp"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                    android:layout_alignParentLeft="true"
                                    />


                            </RelativeLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:id="@+id/layout_education"
                                android:layout_height="wrap_content">

                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_below="@+id/educationinfo"
                        android:id="@+id/experienceinfo"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="20dp"
                        android:elevation="3dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:background="@color/colorPrimary"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:textColor="@color/white"
                                    android:text="PROFESSIONAL EXPERIENCE"
                                    android:gravity="left"
                                    android:padding="10dp"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                    android:layout_alignParentLeft="true"
                                    />

                            </RelativeLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:id="@+id/layout_experience"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txtExpStatus"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                    android:padding="2dp"
                                    />

                                <android.support.v7.widget.RecyclerView
                                    android:layout_width="match_parent"
                                    android:layout_margin="5dp"
                                    android:id="@+id/expList"
                                    android:nestedScrollingEnabled="true"
                                    android:layout_height="match_parent" />

                            </LinearLayout>
                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_below="@+id/experienceinfo"
                        android:id="@+id/resumecard"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="20dp"
                        android:elevation="3dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:background="@color/colorPrimary"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:textColor="@color/white"
                                    android:text="RESUME"
                                    android:gravity="left"
                                    android:padding="10dp"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                    android:layout_alignParentLeft="true"

                                    />



                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:text="Click to view the Resume / Biodata / CV"
                                    android:padding="2dp"
                                    />

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/btnViewResume"
                                    android:text="VIEW"
                                    android:background="@drawable/employer_home_btn"
                                    android:layout_gravity="right"
                                    android:layout_margin="5dp"
                                    />

                            </LinearLayout>

