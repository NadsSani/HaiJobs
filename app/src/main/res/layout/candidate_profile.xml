                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="DATE OF BIRTH"
                                android:padding="2dp"

                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="2dp"
                                android:background="@color/logocolortwo"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtdspdob"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                android:padding="2dp"
                                android:gravity="right"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="GENDER"
                                android:padding="2dp"

                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="2dp"
                                android:background="@color/logocolortwo"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtdsgender"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                android:padding="2dp"
                                android:gravity="right"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="CONTACT NO."
                                android:padding="2dp"

                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="2dp"
                                android:background="@color/logocolortwo"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtdspcontact"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                android:padding="2dp"
                                android:gravity="right"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="EMAIL"
                                android:padding="2dp"

                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="2dp"
                                android:background="@color/logocolortwo"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtdspemail"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                android:padding="2dp"
                                android:gravity="right"
                                />


                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_below="@+id/personalinfo"
                        android:id="@+id/locationinfo"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="20dp"
                        android:elevation="3dp"
                        android:padding="10dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:background="@color/colorPrimary"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:textColor="@color/white"
                                    android:text="CONTACT ADDRESS"
                                    android:gravity="left"
                                    android:padding="10dp"
